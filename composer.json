{
    "name": "stubbles/values",
    "type": "library",
    "homepage": "http://stubbles.net/",
    "license": "BSD-3-Clause",
    "description": "Useful classes to ease the work with values.",
    "require": {
        "php": "^8.0",
        "ext-iconv": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "mikey179/vfsstream": "^1.6.11",
        "bovigo/callmap": "^7.0.x-dev",
        "bovigo/assert": "^7.0.x-dev",
        "phpstan/phpstan": "^1.9"
    },
    "autoload": {
        "psr-4": {
            "stubbles\\values\\": "src/main/php"
        },
        "files": ["src/main/php/functions.php"]
    },
    "autoload-dev": {
        "psr-4": {
            "stubbles\\streams\\file\\": "src/test/helper",
            "stubbles\\values\\": "src/test/php"
        }
    },
    "extra": {
        "branch-alias": {
            "dev-master": "10.0.x-dev"
        }
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "php-coveralls": "php-coveralls",
        "phpstan": "phpstan"
    }
}
